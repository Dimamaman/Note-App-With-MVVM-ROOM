<resources xmlns:tools="http://schemas.android.com/tools">
     Base application theme.
    <style name="Theme.MyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/gray_700</item>
        <item name="colorOnSecondary">#757575</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.SplashTheme" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/note_icon</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.MyNote</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="iconTint">@color/colorBoulder</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/colorSilver</item>
    </style>

    <style name="BackGroundWindow">
        <item name="android:background">@color/window_background</item>
    </style>
</resources>